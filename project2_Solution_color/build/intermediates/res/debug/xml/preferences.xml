<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robobunny="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Share Options"
        android:key="pref_key_storage_settings">

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Share Subject"
            android:summary="This is the subject of the message you would like to send"
            android:key="subject_text"/>

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Share Text"
            android:summary="This is the text you would like to share"
            android:key="share_text"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Rendering Options"
        android:key="pref_key_storage_settings">

        <EditTextPreference
            android:defaultValue="0"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Sketchiness"
            android:summary="Set BW threshold; higher numbers correspond to less detail and a whiter image"
            android:key="sketchiness" />

        <EditTextPreference
            android:defaultValue="0"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Saturation"
            android:summary="Set color saturation; higher numbers correspond to more colorful images"
            android:key="saturation" />

    </PreferenceCategory>

</PreferenceScreen>
